{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "enabledManagers": [
    "kustomize"
  ],
  "kustomize": {
    "fileMatch": [
      "(^|/)kustomization\\.ya?ml(\\.j2)?$"
    ]
  },
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "\\.tf$",
        "\\.tftpl$",
        "\\.yaml$",
        "\\.sh$"
      ],
      "matchStrings": [
        "(?<currentValue>[\\w+\\.\\-]*)['\",;]*\\s*#\\s?renovate: (?<datasource>\\S+)=(?<depName>\\S+)\\s?(registry=(?<registryUrl>\\S+))?\\s?(versioning=(?<versioning>\\S+))?"
      ]
    }
  ],
  "packageRules": [
    {
      "matchManagers": [
        "helm-values"
      ],
      "registryUrls": [
        "https://kyverno.github.io/kyverno/"
      ],
      "matchPackageNames": [
        "/^kyverno$/"
      ]
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "versioning": "loose",
      "matchPackageNames": [
        "/^ghcr.io/corentinth/it-tools$/"
      ]
    }
  ]
}
